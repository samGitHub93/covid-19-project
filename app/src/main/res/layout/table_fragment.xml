<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailed_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="90sp"
                    android:padding="5sp"
                    android:text="@string/date_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/new_contagions_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="95sp"
                    android:padding="5sp"
                    android:text="@string/new_contagions_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/contagions_variation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="105sp"
                    android:padding="5sp"
                    android:text="@string/contagions_variation_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/contagions_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="90sp"
                    android:padding="5sp"
                    android:text="@string/contagions_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/deaths_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="90sp"
                    android:padding="5sp"
                    android:text="@string/death_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/hospitalized_with_symptoms_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="105sp"
                    android:padding="5sp"
                    android:text="@string/hospitalized_with_symptoms_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/intensive_care_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="115sp"
                    android:padding="5sp"
                    android:text="@string/intensive_care_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/total_hospitalized_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="125sp"
                    android:padding="5sp"
                    android:text="@string/total_hospitalized_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/home_isolation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="125sp"
                    android:padding="5sp"
                    android:text="@string/home_isolation_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/healed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="95sp"
                    android:padding="5sp"
                    android:text="@string/healed_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/buffers_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="95sp"
                    android:padding="5sp"
                    android:text="@string/buffers_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/total_positive_molecular_tests_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="180sp"
                    android:padding="5sp"
                    android:text="@string/total_positive_molecular_test_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/total_positive_rapid_tests_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="155sp"
                    android:padding="5sp"
                    android:text="@string/total_positive_rapid_test_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/total_molecular_tests_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="135sp"
                    android:padding="5sp"
                    android:text="@string/molecular_test_buffers_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/total_rapid_tests_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/title_border"
                    android:minWidth="120sp"
                    android:padding="5sp"
                    android:text="@string/rapid_test_buffers_title"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/first_row_layout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="90sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/new_contagions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="95sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/contagions_variation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="105sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/contagions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="90sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/deaths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="90sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/hospitalized_with_symptoms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="105sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/intensive_care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="115sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/total_hospitalized"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="125sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/home_isolation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="125sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/healed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="95sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/buffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="95sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/total_positive_molecular_tests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="180sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/total_positive_rapid_tests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="155sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/total_molecular_tests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="135sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/total_rapid_tests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120sp"
                    android:padding="5sp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:orientation="vertical" />

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
